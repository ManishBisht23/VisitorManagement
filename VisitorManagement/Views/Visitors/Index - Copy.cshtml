@model IEnumerable<VisitorManagement.Models.Visitor>

<div class="overlay">
    <div class="col-md-8 col-md-offset-2 section-title">
        <h2>Visitor</h2>

        <p>
            <a asp-action="Create">Create New</a>
        </p>
        <table class="table">
            <thead>
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.FirstName)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.LastName)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Business)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.DateIn)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.DateOut)
                    </th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.FirstName)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.LastName)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Business)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.DateIn)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.DateOut)
                        </td>
                        <td>
                            <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                            <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                            <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>